<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/home_layout"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    >
        <RelativeLayout
            android:id="@+id/search_bar_relative_layout"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:tools="http://schemas.android.com/tools" >

                <SearchView
                    android:id="@+id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
             </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_menu_for_home"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/search_bar_relative_layout"
                        android:scrollbars="vertical"
                        android:layout_above="@+id/bottom_home_navigation"
                        >
                    </androidx.recyclerview.widget.RecyclerView>




        <ImageButton
            android:id="@+id/bottom_home_navigation"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/ic_baseline_home_24"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            tools:ignore="NotSibling" />

        <ImageButton
            android:id="@+id/bottom_cart_navigation"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="0dp"
            android:src="@drawable/ic_baseline_shopping_cart_24"
            android:layout_marginBottom="0dp"
            android:layout_alignParentBottom="true"
            />
        <ImageButton
            android:id="@+id/bottom_delivery_navigation"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="180dp"
            android:src="@drawable/ic_baseline_two_wheeler_24"
            android:layout_marginBottom="0dp"
            android:layout_alignParentBottom="true"
            />
        <ImageButton
            android:id="@+id/bottom_navigation_profile"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="260dp"
            android:src="@drawable/ic_baseline_account_box_24"
            android:layout_alignParentRight="true"
            android:baselineAlignBottom="true"
            android:layout_alignParentBottom="true"
            />


</RelativeLayout>