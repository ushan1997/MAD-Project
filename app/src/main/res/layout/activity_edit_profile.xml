<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDD0"
    tools:context=".EditProfile">

    <ImageView
        android:id="@+id/icon222"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/person3"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fernando K.S"
        android:layout_below="@id/icon222"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="145dp"
        android:textSize="23dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/dob_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date of birth"
        android:layout_below="@id/address_text"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:textSize="17dp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:inputType="datetime"
        android:layout_below="@id/address_text"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="40dp"
        android:textSize="17dp"
        android:textColor="@android:color/black"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_arrow_drop_down_24"
        android:layout_below="@id/address_text"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="36dp"
        />

    <TextView
        android:id="@+id/gender_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:layout_below="@id/dob"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:textSize="17dp"
        android:textColor="@android:color/black"
        />
    <ImageView
        android:id="@+id/female_radiobtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_radio_button_unchecked_24"
        android:layout_below="@id/dob"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="36dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Female"
        android:inputType="date"
        android:layout_below="@id/dob"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="40dp"
        android:textSize="17dp"
        android:textColor="@android:color/black"
        />

    <ImageView
        android:id="@+id/male_radiobtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_radio_button_unchecked_24"
        android:layout_below="@id/female_radiobtn"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Male"

        android:layout_below="@id/female_radiobtn"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="10dp"
        android:textSize="17dp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/email_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_below="@id/username_text"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:textSize="17dp"
        android:textColor="@android:color/black"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username_text"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/username_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User name"
        android:layout_below="@id/name1"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:textSize="17dp"
        android:textColor="@android:color/black"
        />

    <EditText
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name1"
        android:inputType="text"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/phone_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:layout_below="@id/email"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:textSize="17dp"
        android:textColor="@android:color/black"
        />

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:inputType="text"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/address_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address"
        android:layout_below="@id/phone_text"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:textSize="17dp"
        android:textColor="@android:color/black"
        />

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_text"
        android:inputType="text"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:textColor="@android:color/black"
        />


    <Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/buttons"
        android:padding="10dp"
        android:text="SAVE"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</RelativeLayout>