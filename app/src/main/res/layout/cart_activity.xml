<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/cart_layout"
    android:layout_height="match_parent"
    tools:context=".CartActivity"
    >

    <TextView
        android:id="@+id/cart_heading"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:text="My Cart Items"
        android:textColor="@color/Black"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_menu_for_cart"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@id/cart_heading"
        android:scrollbars="vertical"
        android:layout_above="@+id/scrollView">
    </androidx.recyclerview.widget.RecyclerView>



    <View
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@id/cart_button_BuyNow"
        android:background="@android:color/black"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/cart_total_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="Total Amount ="
        android:textColor="@color/Black"
        android:textSize="14dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="672dp" />

    <TextView
        android:id="@+id/cart_total"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="40dp"
        android:text="Amount"
        android:textColor="@color/colorPrimary"
        android:textSize="13dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="672dp" />

    <Button
        android:id="@+id/cart_button_BuyNow"
        android:layout_width="157dp"
        android:layout_height="52dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="190dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/buttons"
        android:text="Buy Now" />

</RelativeLayout>